{
  "name": "OPM - Open Porous Media Flow Simulator",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],
  "remoteUser": "ubuntu",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "containerEnv": {
    "CLAUDE_SKIP_PERMISSIONS_CHECK": "true",
    "ANTHROPIC_SKIP_PERMS": "true",
    "CLAUDE_CLI_YOLO": "true"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "leafvmaple.octave",
        "saoudrizwan.claude-dev",
        "optuna.optuna-dashboard",
        "tusindfryd.octave-formatter",
        "oderwat.indent-rainbow",
        "mechatroner.rainbow-csv",
        "ms-toolsai.datawrangler",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-renderers",
        "bierner.markdown-mermaid",
        "Anthropic.claude-code",
        "ms-azuretools.vscode-containers",
        "ms-vscode-remote.vscode-remote-extensionpack"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        },
        "python.defaultInterpreterPath": "/usr/bin/python3"
      }
    }
  },
  "postCreateCommand": "echo 'OPM container ready. Run: flow --help for OPM simulator'",
  "features": {}
}