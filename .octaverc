% MRST Configuration
if exist('/opt/mrst/startup.m', 'file')
    addpath('/opt/mrst');
    cd('/opt/mrst');
    try
        startup;
        fprintf('MRST started successfully\n');
    catch ME
        fprintf('Warning: MRST startup had issues: %s\n', ME.message);
    end
    cd('/workspaces/simulation');
else
    fprintf('Warning: MRST not found in /opt/mrst\n');
end

% Additional configuration
more off;
format compact;
